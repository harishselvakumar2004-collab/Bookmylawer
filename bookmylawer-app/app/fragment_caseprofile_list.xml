<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/rounded_card_bg">

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/lpic3"
        android:background="@drawable/circle_bg"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/lawyerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rako Christian."
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_calendar"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31/2/2023"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 AM"
                android:textSize="12sp"
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/applicant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Applicant: Mr Jide Kosoko"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/caseType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case : Family matters"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:text="Message"
        android:textColor="#1E3D64"
        android:textSize="12sp" />
</LinearLayout>
